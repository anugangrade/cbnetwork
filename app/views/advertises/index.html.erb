<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1>Listing advertises</h1>

    <table style="width:100%;">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Branch</th>
          <th>Weblink</th>
          <th>Zone</th>
          <th>Cateogry</th>
          <th>Subcateogry</th>
          <th>Start date</th>
          <th>End date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @advertises.each do |advertise| %>
          <tr>
            <td><%= advertise.title %></td>
            <td><%= advertise.description %></td>
            <td><%= advertise.branch_id %></td>
            <td><%= advertise.weblink %></td>
            <td><%= advertise.zone_id %></td>
            <td><%= advertise.cateogry.name %></td>
            <td><%= advertise.subcateogry.name %></td>
            <td><%= advertise.start_date %></td>
            <td><%= advertise.end_date %></td>
            <td><%= link_to 'Show', advertise %></td>
            <td><%= link_to 'Edit', edit_advertise_path(advertise) %></td>
            <td><%= link_to 'Destroy', advertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Advertise', new_advertise_path ,:style=>"float:left;"%>
  <div class="col-md-2"></div>
</div>